<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight"
    tools:context="com.bih.nic.e_wallet.activities.ProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_lay_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sel_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme" />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_lay_profile"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayDark"
            android:padding="18dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="My Profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_action_user"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/text_deleer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="Name:Chandan Singh"/>
                <TextView
                    android:id="@+id/text_deleer_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="A/c-155400121332"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:text="To Send text Message please fill in your details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="I am "/>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/text_individual"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:text="Individual"
                android:background="@drawable/rectangle_shape"
                android:gravity="center"/>
            <TextView
                android:id="@+id/text_deler"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:text="Dealer"
                android:background="@drawable/rectangle_shape"
                android:gravity="center"/>
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/edit_name2"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:hint="Chandan Kr. Singh"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".3"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Account No."
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/edit_walet_id"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_primary"
                    android:layout_gravity="center_vertical"
                    android:text="N/A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".3"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="IFSC CODE"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/edit_ifsc"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:hint="Punb02664545"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:text="Mobile"/>
                <TextView
                    android:id="@+id/edit_mobile2"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:hint="9800211112"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:text="Subdivision"/>
                <TextView
                    android:id="@+id/edit_subdivision"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:hint="vidyut bhavan ,patna"/>
            </LinearLayout>

        </LinearLayout>
<!--        <CheckBox
            android:id="@+id/check_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to be contacted by EzyHomes and others for similer properties or related services"/>-->
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:text="Services provided by: NIC Bihar"/>
</RelativeLayout>
